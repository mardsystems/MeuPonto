@page
@model MeuPonto.Pages.Pontos.EditarModel

@{
    ViewData["Title"] = "Editar Ponto";
}

@section Breadcrumb {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index"><i class="bi bi-house"></i></a></li>
            <li class="breadcrumb-item"><a asp-page="./Index">Pontos</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </nav>
}

@section Title {
    @ViewData["Title"] <span class="badge bg-secondary">@Html.DisplayFor(model => model.Ponto.DataHora)</span>
}

@section CardHeader {
    <ul class="nav nav-tabs card-header-tabs">
        <li class="me-1">
            <div class="btn-group">
                <a class="btn btn-primary" asp-page="./Criar" target="_modal">
                    <i class="bi bi-plus-circle"></i>
                    Criar Novo
                </a>
                <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false" data-bs-reference="parent">
                    <span class="visually-hidden">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item marcacao ponto" asp-page="./Marcar" target="_modal">
                            <i class="bi bi-check2-circle"></i>
                            Marcar Ponto
                        </a>
                    </li>
                </ul>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="./Detalhar" asp-route-id="@Model.Ponto?.Id">
                <i class="bi bi-card-text"></i>
                <span class="d-none d-sm-inline">Detalhar</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page">
                <i class="bi bi-pencil"></i>
                Editar
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger" asp-page="./Excluir" asp-route-id="@Model.Ponto?.Id" target="_modal">
                <i class="bi bi-trash"></i>
                <span class="d-none d-sm-inline">Excluir</span>
            </a>
        </li>
    </ul>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row mb-3">
    <label asp-for="Ponto.ContratoId" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <select asp-for="Ponto.ContratoId" class="form-select" asp-items="ViewBag.ContratoId"></select>
        <span asp-validation-for="Ponto.ContratoId" class="text-danger"></span>
    </div>
</div>
<div class="row mb-3">
    <label asp-for="Ponto.DataHora" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <input asp-for="Ponto.DataHora" class="form-control" />
        <span asp-validation-for="Ponto.DataHora" class="text-danger"></span>
    </div>
</div>
<fieldset class="row mb-3">
    <legend class="col-form-label col-sm-3 pt-0">Momento</legend>
    <div class="col-sm-9">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Ponto.MomentoId" id="Ponto_MomentoId_Entrada" value="1" @(Model.Ponto.MomentoId == MomentoEnum.Entrada ? "checked" : "")>
            <label class="form-check-label" for="Ponto_MomentoId_Entrada">
                Entrada
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Ponto.MomentoId" id="Ponto_MomentoId_Saida" value="2" @(Model.Ponto.MomentoId == MomentoEnum.Saida ? "checked" : "")>
            <label class="form-check-label" for="Ponto_MomentoId_Saida">
                Saída
            </label>
        </div>
        <div class="form-check disabled">
            <input class="form-check-input" type="radio" name="Ponto.MomentoId" id="Ponto_MomentoId_Errado" value="3" @(Model.Ponto.MomentoId == MomentoEnum.Errado ? "checked" : "")>
            <label class="form-check-label" for="Ponto_MomentoId_Errado">
                Errado
            </label>
        </div>
        <span asp-validation-for="Ponto.MomentoId" class="text-danger"></span>
    </div>
</fieldset>
<fieldset class="row mb-3">
    <legend class="col-form-label col-sm-3 pt-0">Pausa</legend>
    <div class="col-sm-9">
        <div class="btn-group" role="group" aria-label="Pausa">
            <input type="radio" class="btn-check" name="Ponto.PausaId" id="Ponto_PausaId_Almoco" value="1" autocomplete="off">
            <label class="btn btn-outline-primary" for="Ponto_PausaId_Almoco" title="Almoço">
                <i class="bi bi-egg-fried"></i>
            </label>
            <input type="radio" class="btn-check" name="Ponto.PausaId" id="Ponto_PausaId_CafeLanche" value="2" autocomplete="off">
            <label class="btn btn-outline-primary" for="Ponto_PausaId_CafeLanche" title="Café/Lanche">
                <i class="bi bi-cup-hot"></i>
            </label>
            <input type="radio" class="btn-check" name="Ponto.PausaId" id="Ponto_PausaId_Banheiro" value="3" autocomplete="off">
            <label class="btn btn-outline-primary" for="Ponto_PausaId_Banheiro" title="Banheiro">
                <i class="bi bi-badge-wc"></i>
            </label>
            <input type="radio" class="btn-check" name="Ponto.PausaId" id="Ponto_PausaId_ConversaReuniao" value="4" autocomplete="off">
            <label class="btn btn-outline-primary" for="Ponto_PausaId_ConversaReuniao" title="Conversa/Reunião">
                <i class="bi bi-chat"></i>
            </label>
            <input type="radio" class="btn-check" name="Ponto.PausaId" id="Ponto_PausaId_Telefonema" value="5" autocomplete="off">
            <label class="btn btn-outline-primary" for="Ponto_PausaId_Telefonema" title="Telefonema">
                <i class="bi bi-telephone"></i>
            </label>
            <input type="radio" class="btn-check" name="Ponto.PausaId" id="Ponto_PausaId_Generica" value="6" autocomplete="off">
            <label class="btn btn-outline-primary" for="Ponto_PausaId_Generica" title="Genérica">
                <i class="bi bi-pause-fill"></i>
            </label>
        </div>
        <span asp-validation-for="Ponto.PausaId" class="text-danger"></span>
    </div>
</fieldset>
<div class="row mb-3">
    <div class="col-sm-9 offset-sm-3">
        <div class="form-check">
            <input type="checkbox" asp-for="Ponto.Estimado" class="form-check-input" />
            <label asp-for="Ponto.Estimado" class="form-check-label"></label>
        </div>
        <span asp-validation-for="Ponto.Estimado" class="text-danger"></span>
    </div>
</div>
<div class="row mb-3">
    <label asp-for="Ponto.Observacao" class="col-sm-3 col-form-label"></label>
    <div class="col-sm-9">
        <textarea asp-for="Ponto.Observacao" class="form-control"></textarea>
        <span asp-validation-for="Ponto.Observacao" class="text-danger"></span>
    </div>
</div>

@section FormActions {
    <input type="hidden" asp-for="Ponto.Version" />
    <input type="hidden" asp-for="RefererUrl" />
    <button type="submit" value="Salvar" class="btn btn-primary">
        Salvar
    </button>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
